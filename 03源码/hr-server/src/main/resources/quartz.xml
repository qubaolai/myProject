<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="false">
    <!--配置定时任务-->
    <!--Spring配置文件中配置JobDetail-->
    <bean id="exampleJob" class="com.qubaolai.common.quartz.ExampleJob"></bean>
    <bean id="exampleJobDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 指定任务类 -->
        <property name="targetObject" ref="exampleJob" />
        <!-- 指定任务执行的方法 -->
        <property name="targetMethod" value="execute" />
        <!-- 禁用并发执行 -->
        <property name="concurrent" value="false"/>
    </bean>
    <bean id="exampleJobTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="exampleJobDetail" />
        <!-- 每天凌晨1点运行 -->
        <!--<property name="cronExpression" value="0 00 01 * * ?" />-->
        <property name="cronExpression" value="0 55 17 * * ?" />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="exampleJobTrigger" />
            </list>
        </property>
    </bean>
</beans>